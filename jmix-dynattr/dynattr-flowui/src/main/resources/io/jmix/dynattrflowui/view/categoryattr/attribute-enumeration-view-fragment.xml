<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://enumerationScreen.title">
    <data>
        <collection id="localizedEnumValuesDc"
                    class="io.jmix.dynattrflowui.impl.model.AttributeLocalizedEnumValue"
                    fetchPlan="_local">
            <loader id="localizedEnumValuesDl"/>
        </collection>
    </data>
    <layout spacing="true" expand="editorBox" margin="false">
        <hbox id="editorBox" margin="false" width="100%">
            <vbox spacing="true" width="100%" height="100%">
                <hbox spacing="true" width="100%" expand="valueField">
                    <textField id="valueField" datatype="string"/>
                    <button id="addBtn" action="localizedEnumValuesDataGrid.add"/>
                </hbox>
                <dataGrid id="localizedEnumValuesDataGrid"
                          dataContainer="localizedEnumValuesDc" width="100%" height="100%">
                    <actions>
                        <action id="add" text="msg:///actions.Add"/>
                    </actions>
                    <columns>
                        <column key="value" property="value" editable="true"/>
                        <column key="removeItem" editable="false" />
                    </columns>
                </dataGrid>
            </vbox>
            <vbox id="localizationBox" spacing="true" margin="true" width="100%" height="100%" visible="false">
                <span text="msg://localizationBox.title"/>
            </vbox>
        </hbox>
        <hbox id="buttonsBox" spacing="true">
            <button id="commitBtn" icon="OK" text="msg:///actions.Ok" />
            <button id="cancelBtn" icon="CANCEL" text="msg:///actions.Cancel"/>
        </hbox>
    </layout>
</view>
