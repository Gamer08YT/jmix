<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://enumerationScreen.title">
    <data>
        <collection id="localizedValuesDc"
                    class="io.jmix.dynattrflowui.impl.model.AttributeLocalizedValue"
                    fetchPlan="_local">
            <loader id="localizedValuesDl"/>
        </collection>
    </data>
    <layout spacing="true" margin="false" padding="false" width="100%" height="100%">
        <dataGrid id="localizedValuesDataGrid" dataContainer="localizedValuesDc" width="100%" minHeight="25em" editorBuffered="true" >
            <columns>
                <column key="language" editable="false"/>
                <column key="name" property="name" editable="true"/>
                <column key="description" property="description" editable="true"/>
            </columns>
        </dataGrid>
    </layout>
</view>
