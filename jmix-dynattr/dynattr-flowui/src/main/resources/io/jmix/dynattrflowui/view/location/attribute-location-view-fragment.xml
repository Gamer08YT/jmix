<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://enumerationScreen.title">
    <layout spacing="true" expand="configurationBox" margin="false" padding="false">
        <hbox spacing="true" expand="saveConfigurationBtn">
            <comboBox id="columnsCountLookupField" title="msg://columnsCountLookupField.title" width="175px"/>
            <button id="saveConfigurationBtn" title="msg://saveConfigurationBtn.title"/>
        </hbox>
        <vbox id="configurationBox" spacing="true" width="100%" height="100%">
            <dataGrid id="sourceDataGrid" metaClass="dynat_CategoryAttribute" width="100%" height="100%"
                      minWidth="25em" minHeight="10em">
                <columns>
                    <column key="name" property="name" header="msg://sourceDataGrid.sourceColumn.title"
                            sortable="false"/>
                </columns>
            </dataGrid>
            <hbox id="targetDataGridBox"/>
        </vbox>
    </layout>
</view>
