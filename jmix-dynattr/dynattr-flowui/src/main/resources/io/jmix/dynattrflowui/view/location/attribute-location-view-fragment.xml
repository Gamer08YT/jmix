<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://enumerationScreen.title">
    <data>
        <collection id="sourceDc" class="io.jmix.dynattr.model.CategoryAttribute"/>
    </data>
    <layout spacing="true" expand="configurationBox" margin="false" padding="false">

        <hbox>
            <comboBox id="columnsCountLookupField" label="msg://io.jmix.dynattrui.view.location/columnsCountLookupField.title" width="175px"/>
        </hbox>
        <hbox id="configurationBox" spacing="true" height="100%" margin="false" padding="false">
            <dataGrid id="sourceDataGrid" height="100%" width="100%"
                      minWidth="40em" minHeight="30em" dataContainer="sourceDc">
                <columns>
                    <column key="name" property="name" header="msg://sourceDataGrid.sourceColumn.title"
                            sortable="false"/>
                    <column key="columnPosition" header="msg://sourceDataGrid.column.position.title"/>
                    <column key="rowPosition" header="msg://sourceDataGrid.row.position.title"/>
                </columns>
            </dataGrid>
        </hbox>
    </layout>
</view>
